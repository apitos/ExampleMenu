<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="菜单和对话框"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆框"
        android:textSize="18dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="25dp"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/et_userid"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/et_userid"
            android:id="@+id/userid"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="密码"
            android:textSize="25dp"
            android:layout_below="@id/et_userid"
            android:padding="10dp"
            android:id="@+id/et_password"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/password"
            android:layout_below="@id/userid"
            android:layout_toRightOf="@id/et_password"
            android:password="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:onClick="ButtonSignin"
            android:id="@+id/button_signin"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:onClick="ButtonSignup"
            android:id="@+id/button_signup"
            android:layout_below="@id/password"
            android:layout_toRightOf="@id/button_signin"
            android:layout_marginLeft="40dp"
            />
    </RelativeLayout>


</LinearLayout>
